<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="832.0" prefWidth="1280.0" style="-fx-background-color: #d7d7dd;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.realestate.controllers.ListingPageControllers">

    <ImageView fitHeight="150.0" fitWidth="150.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <image>
            <Image url="@../images/logo-icon.jpg" />
        </image>
    </ImageView>

    <Label prefHeight="46.0" text="Property Search"
           AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="90.0" AnchorPane.topAnchor="30.0">
        <font>
            <Font name="System Bold Italic" size="30.0" />
        </font>
        <alignment>CENTER</alignment>
    </Label>

    <Button style="-fx-background-color: transparent;"
            AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0">
        <graphic>
            <ImageView fitHeight="50.0" fitWidth="50.0">
                <Image url="@../images/img.png" />
            </ImageView>
        </graphic>
    </Button>

    <VBox spacing="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="150.0">
        <HBox alignment="CENTER" spacing="10.0">
            <TextField fx:id="propertyTypeTextField" prefHeight="30.0" prefWidth="150.0"
                       promptText="Property Type" />
            <TextField fx:id="roomsTextField" prefHeight="30.0" prefWidth="150.0"
                       promptText="No of Rooms" />
            <TextField fx:id="areaTextField" prefHeight="30.0" prefWidth="150.0"
                       promptText="Area" />
            <TextField fx:id="priceTextField" prefHeight="30.0" prefWidth="150.0"
                       promptText="Price" />
            <DatePicker fx:id="dateTextField" prefHeight="30.0" prefWidth="150.0"
                        promptText="Date" />
            <Button fx:id="searchButton" prefHeight="30.0" prefWidth="100.0"
                    style="-fx-background-color: #ADC867;" text="Search" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Button>
        </HBox>
    </VBox>

    <TableView fx:id="propertyTable" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0"
               AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="248.0">
        <columns>
            <TableColumn fx:id="imageColumn" prefWidth="100.0" style="-fx-alignment: CENTER;"
                         text="Image" />
            <TableColumn fx:id="nameColumn" prefWidth="100.0" style="-fx-alignment: CENTER;"
                         text="Name" />
            <TableColumn fx:id="locationColumn" prefWidth="100.0" style="-fx-alignment: CENTER;"
                         text="Location " />
            <TableColumn fx:id="priceColumn" prefWidth="100.0" style="-fx-alignment: CENTER;"
                         text="Price" />
            <TableColumn fx:id="propertyTypeColumn" prefWidth="127.0" style="-fx-alignment: CENTER;"
                         text="Property Type" />
            <TableColumn fx:id="dateColumn" prefWidth="73.0" style="-fx-alignment: CENTER;"
                         text="Date" />
            <TableColumn fx:id="numberOfRoomsColumn" prefWidth="143.0" style="-fx-alignment: CENTER;"
                         text="Number of Rooms" />
            <TableColumn fx:id="propertyFeaturesColumn" prefWidth="177.5999755859375"
                         style="-fx-alignment: CENTER;" text="Features" />
            <TableColumn fx:id="areaColumn" prefWidth="116.00006103515625"
                         style="-fx-alignment: CENTER;" text="Area" />
            <TableColumn fx:id="statusColumn" prefWidth="201.0" style="-fx-alignment: CENTER;"
                         text="Status" />
        </columns>
    </TableView>
</AnchorPane>