<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="900" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.realestate.controllers.DashBoard">
    <children>
        <!-- القائمة الجانبية -->
        <GridPane maxWidth="300.0" minWidth="250.0" style="-fx-background-color:#BDB4C8;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="200.0" minHeight="150.0" prefHeight="180.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="100.0" minHeight="50.0" prefHeight="70.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="80.0" minHeight="50.0" prefHeight="60.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="300.0" minHeight="200.0" prefHeight="250.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="100.0" minHeight="80.0" prefHeight="90.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <children>
                <ImageView fitHeight="150.0" fitWidth="150.0" preserveRatio="true" GridPane.halignment="CENTER">
                    <image>
                        <Image url="@../images/RealEstate.png" />
                    </image>
                </ImageView>

                <Label text="DashBoard" GridPane.halignment="CENTER" GridPane.rowIndex="1">
                    <font>
                        <Font size="36.0" />
                    </font>
                </Label>

                <Label GridPane.halignment="CENTER" GridPane.rowIndex="2">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>

                <VBox alignment="CENTER" spacing="15" GridPane.rowIndex="3">
                    <Button mnemonicParsing="false" onAction="#goToAgentTable" prefHeight="49.0" prefWidth="194.0" text="User ">
                        <font>
                            <Font size="20.0" />
                        </font>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#goToAgreementTable" prefHeight="50.0" prefWidth="200.0" text="Agreement">
                        <font>
                            <Font size="24.0" />
                        </font>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#goToPropertiesTable" prefHeight="50.0" prefWidth="200.0" text="Property">
                        <font>
                            <Font size="24.0" />
                        </font>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#goToCustomerInteractionTable" prefHeight="50.0" prefWidth="200.0" text="Interaction">
                        <font>
                            <Font size="24.0" />
                        </font>
                    </Button>
                </VBox>

                <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" text="logout" GridPane.halignment="CENTER" GridPane.rowIndex="4">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
            </children>
        </GridPane>

        <!-- منطقة المحتوى المحدثة -->
        <AnchorPane style="-fx-background-color: white;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
            <VBox spacing="20" style="-fx-padding: 20;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <!-- المربعات العلوية -->
                <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10;">
                    <VBox alignment="CENTER" prefWidth="150" spacing="10" style="-fx-background-color: #BDB4C8; -fx-padding: 15; -fx-background-radius: 10;">
                        <Label text="Agents">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <Label style="-fx-font-size: 24; -fx-text-fill: white;" text="50" />
                    </VBox>
                    <VBox alignment="CENTER" prefWidth="150" spacing="10" style="-fx-background-color: #BDB4C8; -fx-padding: 15; -fx-background-radius: 10;">
                        <Label text="Properties">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <Label style="-fx-font-size: 24; -fx-text-fill: white;" text="120" />
                    </VBox>
                    <VBox alignment="CENTER" prefWidth="150" spacing="10" style="-fx-background-color: #BDB4C8; -fx-padding: 15; -fx-background-radius: 10;">
                        <Label text="Active Agents">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <Label style="-fx-font-size: 24; -fx-text-fill: white;" text="30" />
                    </VBox>
                </HBox>

                <!-- الكروت -->
                <ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
                    <TilePane fx:id="tilePane" alignment="CENTER" hgap="20" style="-fx-padding: 20;" vgap="20">

                    </TilePane>

                </ScrollPane>
                <Button mnemonicParsing="false" onAction="#goToListing" prefHeight="51.0" prefWidth="140.0" text="More.. " alignment="CENTER">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Button>

            </VBox>
        </AnchorPane>
    </children>
</AnchorPane>
