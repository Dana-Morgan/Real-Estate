<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.realestate.controllers.HomePageController">
    <top>
        <fx:include source="Navbar.fxml" />
    </top>


    <center>
        <StackPane>
            <!-- Background Image -->
            <ImageView fitWidth="1280" fitHeight="832" preserveRatio="true">
                <image>
                    <Image url="@../images/house-bg.jpg" />
                </image>
            </ImageView>

            <!-- Search Form -->
            <VBox alignment="CENTER" prefWidth="600.0" spacing="10" style="-fx-background-color: rgba(85, 64, 125, 0.8); -fx-padding: 20;">
                <Label style="-fx-font-size: 40px; -fx-font-weight: bold; -fx-text-fill: white;" text="Find Your Home" />
                <fx:include source="Search.fxml" />
            </VBox>
        </StackPane>
    </center>
</BorderPane>
