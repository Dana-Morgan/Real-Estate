<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="832.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.realestate.controllers.CreateAccountForAgentController">
   <!-- الشريط العلوي -->
   <top>
      <fx:include source="Navbar.fxml" />
   </top>

   <!-- القسم الأيمن: الجدول -->
   <center>
      <VBox spacing="10.0" style="-fx-background-color: #F0EDED; -fx-padding: 20;">
         <children>
            <Text text="The Agents">
               <font>
                  <Font size="24.0" />
               </font>
            </Text>
            <TableView fx:id="agentTabel" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="idTabel" text="ID" />
                  <TableColumn fx:id="NameColumn" text="Name" />
                  <TableColumn fx:id="EmailColumn" text="Email" />
                  <TableColumn fx:id="PhoneColumn" text="Phone" />
                  <TableColumn fx:id="passwordColumn" text="Password" />
                  <TableColumn fx:id="roleColumn" text="Role" />
                  <TableColumn fx:id="UpdateAgent" text="Update" />
                  <TableColumn fx:id="DeleteAgent" text="Delete" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </center>

   <!-- القسم الأيسر: إنشاء الحساب -->
   <left>
      <AnchorPane prefHeight="832.0" prefWidth="608.0" style="-fx-background-color: BDB4C8;" BorderPane.alignment="CENTER">
         <children>
            <Text layoutX="65.0" layoutY="103.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Create account for agent">
               <font>
                  <Font name="System Bold Italic" size="28.0" />
               </font>
            </Text>
            <TextField fx:id="NameSignUp" layoutX="65.0" layoutY="156.0" prefHeight="48.0" prefWidth="400.0" />
            <TextField fx:id="EmailSignUp" layoutX="65.0" layoutY="251.0" prefHeight="48.0" prefWidth="400.0" />
            <TextField fx:id="PhoneSignUp" layoutX="65.0" layoutY="450.0" prefHeight="48.0" prefWidth="400.0" />
            <PasswordField fx:id="PasswordSignUp" layoutX="65.0" layoutY="346.0" prefHeight="48.0" prefWidth="400.0" />
            <Label layoutX="65.0" layoutY="525.0" text="Select Role:">
               <font>
                  <Font size="22.0" />
               </font></Label>
            <ChoiceBox fx:id="roleChoiceBox" layoutX="62.0" layoutY="559.0" prefHeight="48.0" prefWidth="400.0">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <String fx:value="Agent" />
                     <String fx:value="Admin" />
                  </FXCollections>
               </items>
            </ChoiceBox>
            <Button fx:id="CreateBut" layoutX="65.0" layoutY="641.0" mnemonicParsing="false" onAction="#createAccount" prefHeight="48.0" prefWidth="400.0" style="-fx-background-color: ADC867;" text="Create Account">
               <font>
                  <Font size="22.0" />
               </font>
            </Button>
            <Text fill="#151515" layoutX="65.0" layoutY="144.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter Name">
               <font>
                  <Font size="20.0" />
               </font>
            </Text>
            <Text layoutX="65.0" layoutY="247.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter Email">
               <font>
                  <Font size="20.0" />
               </font>
            </Text>
            <Text layoutX="65.0" layoutY="342.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter Password">
               <font>
                  <Font size="20.0" />
               </font>
            </Text>
            <Text layoutX="65.0" layoutY="439.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter Phone">
               <font>
                  <Font size="20.0" />
               </font>
            </Text>
         </children>
      </AnchorPane>
   </left>
</BorderPane>
